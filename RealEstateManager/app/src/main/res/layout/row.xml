<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:alpha="0.9"
            android:background="@drawable/round_for_row">

        </RelativeLayout>
        <ImageView
            android:id="@+id/imageRow"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="12.5dp"
            />

        <RelativeLayout
            android:id="@+id/Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageRow"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/TextTypeRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Type"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextTownRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextTypeRow"
                android:layout_marginBottom="10dp"
                android:text="Ville"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextPrixRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextTownRow"
                android:text="Prix"
                android:textColor="#9a5479"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>