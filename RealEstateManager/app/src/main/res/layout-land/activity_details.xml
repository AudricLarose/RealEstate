<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetails">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/descirptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RecycleDetails"
        android:text="Description"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descirptionInputDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descirptionDetails"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="Description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descirptionInputDetails">

        <RelativeLayout
            android:id="@+id/Relativedetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RelativeSurfaceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp">

                <TextView
                    android:id="@+id/surfaceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surface" />

                <TextView
                    android:id="@+id/SurfacechiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/surfaceDetails"
                    android:text="chiffres" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeChiffresDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/PriceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price" />

                <TextView
                    android:id="@+id/PriceChiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PriceDetails"
                    android:text="chiffres" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relativedetails2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/Relativedetails1"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/RelativeRoomDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp">

                <TextView
                    android:id="@+id/RoomDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms" />

                <TextView
                    android:id="@+id/RoomechiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RoomDetails"
                    android:text="chiffres" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeTypeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp">

                <TextView
                    android:id="@+id/TypeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type" />

                <TextView
                    android:id="@+id/TypeChiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TypeDetails"
                    android:text="chiffres" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relativedetails3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Relativedetails2"

            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/RelativeBathroomDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp">

                <TextView
                    android:id="@+id/BathroomDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDB" />

                <TextView
                    android:id="@+id/BathroomchiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BathroomDetails"
                    android:text="chiffres" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeNearbyDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp">

                <TextView
                    android:id="@+id/NearbyDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ProximitÃ©" />

                <TextView
                    android:id="@+id/NearbyChiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NearbyDetails"
                    android:text="chiffres" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relativedetails4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Relativedetails3">

            <RelativeLayout
                android:id="@+id/RelativeRoomsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/RoomsDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedrooms" />

                <TextView
                    android:id="@+id/RoomschiffresDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RoomsDetails"
                    android:text="chiffres" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeDetailsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/Relativedetails4">

            <TextView
                android:id="@+id/locationDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Location"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adresseDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationDetails"
                android:text="Adresse" />

            <TextView
                android:id="@+id/villeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adresseDetails"
                android:text="Ville" />

            <TextView
                android:id="@+id/regionVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/villeDetails"
                android:text="Region" />

            <TextView
                android:id="@+id/paysDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regionVille"
                android:text="Pays" />

        </RelativeLayout>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/mapLiteView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            map:cameraZoom="13"
            map:mapType="normal"
            android:layout_below="@+id/Relativedetails4"
            map:liteMode="true"/>
    </RelativeLayout>


</RelativeLayout>